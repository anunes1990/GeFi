<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:onClick="goExplode"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/txtIdCartao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="txtIdCartao"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNomeCartao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="txtNomeCartao"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVencimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="txtVencimento"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="txtValor"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
